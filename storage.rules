rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to upload files to their own directory
    // Read: cualquier usuario autenticado puede ver las im√°genes
    // Write: solo el propietario puede subir
    match /uploads/{userId}/{allPaths=**} {
      allow read: if request.auth != null; // Cualquier usuario autenticado puede leer
      allow write: if request.auth != null && 
                      request.auth.uid == userId &&
                      request.resource != null &&
                      request.resource.size < 10 * 1024 * 1024; // Max 10MB
    }
  }
} 